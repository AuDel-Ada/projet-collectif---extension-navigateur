{
    "name": "Getting Started Example",
    "description": "Build a cool-reading mode!",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["app.js", "appFont.js", "appPics.js"]
        }
    ],
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources":[
        {
        "matches": ["<all_urls>"],
        "resources": ["degrade2.svg"]
        }
    ]
  }

